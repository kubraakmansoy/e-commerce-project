@model App.WebUI.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "_Layout";
}

<section class="checkout spad">
    <div class="container">
        <div class="row mb-3">
            <div class="col-lg-12">
                <h4>Kayıt Ol</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">@TempData["Message"]</div>
                }
            </div>
        </div>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-lg-8 col-md-10">
                    <div class="checkout__input">
                        <p>Ad Soyad <span>*</span></p>
                        <input asp-for="FullName" />
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>

                    <div class="checkout__input">
                        <p>E-posta <span>*</span></p>
                        <input asp-for="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="checkout__input">
                        <p>Şifre <span>*</span></p>
                        <input asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="checkout__input">
                        <p>Şifre (Tekrar) <span>*</span></p>
                        <input asp-for="ConfirmPassword" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <button type="submit" class="site-btn">KAYIT OL</button>
                    <a class="ml-3" href="@Url.Action("Login", "Account")">Zaten hesabın var mı? Giriş yap</a>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <!-- Eğer projede yoksa _ValidationScriptsPartial olmadan da çalışır,
         fakat client-side doğrulama için bu kısım faydalı -->
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
