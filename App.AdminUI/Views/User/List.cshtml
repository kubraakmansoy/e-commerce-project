@model List<App.Core.DTOs.UserDto>

@{
    ViewData["Title"] = "User List";
    Layout = "_Layout";
}

<h2>Kullanıcı Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Aktif mi?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].FirstName @Model[i].LastName</td>
                <td>@Model[i].Email</td>
                <td>@Model[i].RoleId</td>
                <td>@(Model[i].Enabled ? "✔️" : "❌")</td>
                <td>
                    <a asp-controller="User" asp-action="Approve" asp-route-id="@Model[i].Id" class="btn btn-success btn-sm">Onayla</a>
                </td>
            </tr>
        }
    </tbody>
</table>
